{
  "suggest.autoTrigger": "none",
  "languageserver": {
    "dhall": {
      "command": "dhall-lsp-server",
      "filetypes": [
        "dhall"
      ],
      "rootPatterns": [
        ".git"
      ]
    },
    "dot": {
      "command": "dot-language-server",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "dot"
      ],
      "rootPatterns": [
        ".git"
      ]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "filetypes": [
        "haskell",
        "lhaskell"
      ],
      "rootPatterns": [
        "*.cabal",
        "cabal.project",
        "hie.yaml",
        "package.yaml",
        "stack.yaml"
      ]
    },
    "nix": {
      "command": "nil",
      "filetypes": [
        "nix"
      ],
      "rootPatterns": [
        ".git",
        "flake.nix"
      ],
      "settings": {
        "nil": {
          "formatting": {
            "command": [
              "nixfmt"
            ]
          }
        }
      }
    },
    "perl": {
      "command": "pls",
      "filetypes": [
        "perl"
      ],
      "rootPatterns": [
        ".git"
      ]
    },
    "purescript": {
      "command": "purescript-language-server",
      "args": [
        "--stdio",
        "--config {}"
      ],
      "filetypes": [
        "purescript"
      ],
      "rootPatterns": [
        "bower.json",
        "flake.nix",
        "package.json",
        "packages.dhall",
        "psc-package.json",
        "shell.nix",
        "spago.dhall"
      ]
    },
    "terraform": {
      "command": "terraform-ls",
      "args": [
        "serve"
      ],
      "filetypes": [
        "terraform",
        "terraform-vars"
      ],
      "rootPatterns": [
        ".git",
        ".terraform"
      ]
    },
    "yaml": {
      "command": "yaml-language-server",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "yaml",
        "yaml.docker-compose"
      ],
      "settings": {
        "yaml": {
          "schemas": {
            "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": "/*compose.yaml",
            "kubernetes": "/*.k8s.yaml"
          }
        }
      },
      "rootPatterns": [
        ".git"
      ]
    }
  },
  "python.linting": {
    "mypyEnabled": true,
    "pycodestyleEnabled": true,
    "pylintEnabled": true
  },
  "pyright": {
    "inlayHints": {
      "functionReturnTypes": false,
      "variableTypes": false,
      "parameterTypes": false
    },
    "organizeimports": {
      "provider": "isort"
    }
  },
  "list.insertMappings": {
    "<C-e>": "do:previewtoggle",
    "<C-q>": "action:quickfix",
    "<C-t>": "action:tabe",
    "<C-v>": "action:vsplit",
    "<C-x>": "action:split"
  },
  "list.normalMappings": {
    "<C-e>": "do:previewtoggle",
    "<C-q>": "action:quickfix",
    "<C-t>": "action:tabe",
    "<C-v>": "action:vsplit",
    "<C-x>": "action:split"
  }
}
